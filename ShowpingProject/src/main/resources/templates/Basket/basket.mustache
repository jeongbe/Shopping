<!--+ "&id=" idElement.textContent-->
                   // 데이터를 문자열로 묶어 전송
            let dataToSend = `prodprice=${prod_price.textContent}&prodcnt=${targetElement.textContent}&id=${idElement.textContent}`;

            $.ajax({
                url: ajaxUrl,
                data: dataToSend,
                type: "POST",
                success: function (data) {
                    alert("성공");
                },
                error: function () {
                    alert("에러");
                }
            });

            }
        }


</script>
