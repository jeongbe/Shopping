<head>
    <link href="/static/css/mypage/mypageInfoCheck.css" rel="stylesheet" type="text/css" />
</head>
{{>layouts/headerlogin}}
{{#loginUser}}
<body>


<!-- 마이페이지 상단 -->
<div class="header1">


    <div class="mpusername">
        <!-- My Page 텍스트 -->
        <div class="mp">
            <p>My Page</p>
        </div>

        <!-- 사용자 닉네임 -->
        <div class="username">
            <span id="username-display1"></span>

        </div>

        <!-- 인사말 -->
        <div class="hi">
            <span id="username-display2"></span>
        </div>

    </div>

    <!-- 내 정보 수정 -->
    <div class="myinfo">
        <a href="Info_Check_MyPage.html" style="color: black;">내 정보 수정</a>
    </div>

</div>

<div class="horizontal-line"></div>

<!-- 마이페이지 컨테이너 -->
<div class="container10">

    <!-- 마이페이지 카테고리 -->
    <div class="category10">

        <!-- 나의 쇼핑 정보 -->
        <div class="category_contents_1">
            <p class="category_title_p ">나의 쇼핑 정보</p>
            <div class="horizontal-line"></div>
            <a href="/mypage/main/{{user_code}}"><p class="category_content_p">주문 내역 조회</p></a>
            <a href="/mypage/reviewlist/{{user_code}}"><p class="category_content_p">구매후기 관리</p></a>
            <a href="/mypage/like/{{user_code}}"><p class="category_content_p">좋아요</p></a>
        </div>

        <!-- 고객지원 -->
        <div class="category_contents_2">
            <p class="category_title_p ">고객 지원</p>
            <div class="horizontal-line"></div>
            <a href="/mypage/inquiry/list/{{user_code}}"><p class="category_content_p">문의 목록</p></a>
        </div>
    </div>

    <!-- 마이페이지 내용 -->
    <div class="mypage_content">
        <!-- 내 정보 관리 텍스트 -->
        <div class="myinfo_text_1">
            <p>내 정보 관리</p>
        </div>

        <div class="myinfo_text_2 ">
            <p>*정보를 수정하려면 비밀번호를 입력하세요*</p>
        </div>

        <!-- 비밀번호 입력 -->
        <div class="password_input">
            <form action="" method="post">
                <label for="password">비밀번호:</label>
                <input type="password" id="password" name="password" placeholder="비밀번호를 입력하세요" required>
                <br>

                <div class="submit_password">
                    <input type="submit" class="button_check" value="확인">
                    <input type="reset" class="button_cancell" value="취소">
                </div>
            </form>
        </div>



    </div>

</div>
    <script src="/static/js/mypage/mypageInfoCheck.js"></script>
</body>
{{/loginUser}}
{{>layouts/footer}}