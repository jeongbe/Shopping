<head>
    <link href="/static/css/mypage/mypageInquiryCheck.css" rel="stylesheet" type="text/css" />
</head>
{{>layouts/headerlogin}}
{{#loginUser}}
<body>
<!-- 마이페이지 상단 -->
<div class="header1">
    <div class="mpusername">
        <!-- My Page 텍스트 -->
        <div class="mp">
            <p>My Page</p>
        </div>

        <!-- 사용자 닉네임 -->
        <div class="username">
            <span id="username-display1"></span>
        </div>

        <!-- 인사말 -->
        <div class="hi">
            <span id="username-display2"></span>
        </div>
    </div>

    <!-- 내 정보 수정 -->
    <div class="myinfo">
        <a href="Info_Check_MyPage.html" style="color: black;">내 정보 수정</a>
    </div>
</div>
<div class="horizontal-line"></div>
<!-- 마이페이지 컨테이너 -->
<div class="container10">

    <!-- 마이페이지 카테고리 -->
    <div class="category10">

        <!-- 나의 쇼핑 정보 -->
        <div class="category_contents_1">
            <p class="category_title_p ">나의 쇼핑 정보</p>
            <div class="horizontal-line"></div>
            <a href="/mypage/main/{{user_code}}"><p class="category_content_p">주문 내역 조회</p></a>
            <a href="/mypage/reviewlist/{{user_code}}"><p class="category_content_p">구매후기 관리</p></a>
            <a href="/mypage/like/{{user_code}}"><p class="category_content_p">좋아요</p></a>
        </div>

        <!-- 고객지원 -->
        <div class="category_contents_2">
            <p class="category_title_p ">고객 지원</p>
            <div class="horizontal-line"></div>
            <a href="/mypage/inquiry/list/{{user_code}}"><p class="category_content_p">문의 목록</p></a>
        </div>
    </div>

    <!-- 마이페이지 내용 -->
    {{#getQ}}
    <div class="mypage_content">
        <div class="mypage_review_container">

            <div class="mypage_review_text_box">
                <p>문의 확인</p>
                <div class="horizontal-line"></div>

            </div>

            <!-- 주문 날짜 및 주문번호 -->
            <div class="mypage_review_order_box">
                <p>문의 날짜  {{qu_date}} | 주문 번호  {{order_id}}</p>
                <div class="horizontal-line"></div>
            </div>

            <!-- 상품 컨테이너 -->
            <div class="mp_review_product_container">
                <div class="mypage_review_text_1">
                    <p style="font-weight: bold;">제품</p>
                </div>
                <div class="mp_review_product_img_box">
                    <img class="review_product_img_1" src="img/product1.png" alt="상품 이미지">
                </div>
                <div class="mypage_review_product_info">
                    <p style="font-size: 18px;">
                        {{prod_name}}<br><br>
                        {{prod_discount_price}} <br>
                    </p>
                </div>
            </div>


            <div class="inquiry_type">
                <div class="inquiry_type_text">
                    <p>문의 유형</p>
                </div>

                <div class="inquiry_button_box_1">
                    <button id="inquiry__button_1">{{qu_type}}</button>

                </div>

                <div class="inquiry_button_box_2">

                </div>
            </div>



            <div>
                <p>사진 (최대3개)</p>
            </div>

            <div>
                <img src="img/reviewimg3.png" alt="">
            </div>

            <div class="inquiry_type">
                <div id="reviewForm">
                    <label>문의 제목</label>
                    <input type="text" value="{{qu_title}}" readonly>
                    </br>
                    <label for="reviewContent">문의 내용:</label><br>
                    <textarea id="reviewContent" readonly rows="4" cols="50">{{qu_content}}</textarea>
                </div>
    {{/getQ}}
                <div id="reviewForm">
                    <label for="reviewContent">답변 내용:</label><br>
                    {{#answerText}}
                    <textarea id="reviewContent" readonly rows="4" cols="50" >{{an_content}}</textarea><br>
                    {{/answerText}}
                    <button type="button" id="goBack" onclick="history.back();">돌아가기</button>

                </div>
            </div>
        </div>
    </div>

</div>
    <script src="/static/js/mypage/mypageInquiryCheck.js"></script>
</body>
{{/loginUser}}
{{>layouts/footer}}