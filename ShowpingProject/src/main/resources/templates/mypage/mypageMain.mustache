<head>
    <link href="/static/css/mypage/mypageMain.css" rel="stylesheet" type="text/css" />
</head>
{{>layouts/headerlogin}}

<body>

{{#loginUser}}
<!-- 마이페이지 상단 -->
<div class="header1">

    <div class="mpusername">
        <!-- My Page 텍스트 -->
        <div class="mp">
            <p>My Page</p>
        </div>
        {{#userinfo}}
        <!-- 사용자 닉네임 -->
        <div class="username">
            <span id="username-display1">{{user_name}}</span>
        </div>
        {{/userinfo}}

        <!-- 인사말 -->
        <div class="hi">
            <span id="username-display2">님 반갑습니다.</span>
        </div>

    </div>

    <!-- 내 정보 수정 -->
    <div class="myinfo">
        <a href="Info_Check_MyPage.html" style="color: black;">내 정보 수정</a>
    </div>

</div>

<div class="horizontal-line"></div>

<!-- 마이페이지 컨테이너 -->
<div class="container10">

    <!-- 마이페이지 카테고리 -->
    <div class="category10">

        <!-- 나의 쇼핑 정보 -->
        <div class="category_contents_1">
            <p class="category_title_p ">나의 쇼핑 정보</p>
            <div class="line1"></div>
            <a href="/mypage/main/{{user_code}}"><p class="category_content_p tt">주문 내역 조회</p></a>
            <a href="/mypage/reviewlist/{{user_code}}"><p class="category_content_p">구매후기 관리</p></a>
            <a href="/mypage/like/{{user_code}}"><p class="category_content_p">좋아요</p></a>
        </div>

        <!-- 고객지원 -->
        <div class="category_contents_2">
            <p class="category_title_p ">고객 지원</p>
            <div class="line1"></div>
            <a href="/mypage/inquiry/list/{{user_code}}"><p class="category_content_p">문의 목록</p></a>
        </div>
    </div>

    <!-- 마이페이지 내용 -->
    <div class="mypage_content">

        <!-- ****************************************기간 컨테이너****************************************-->
        <div class="period">
            <div class="title_header">
            <div class="con_title_box">
                <p class="con_title">주문 내역 조회</p>
                <!--            <div class="horizontal-line"></div>-->
            </div>
            <div class="calendar">
                <form action="/mypage/main/{{user_code}}" method="get">
                    <p style="display:none" class="u">{{user_code}}</p>
                    <!-- 날짜 선택 달력 -->
                    <input type="date" name="DateStart" id="start-date" placeholder="시작 날짜">
                    -
                    <input type="date" name="DateEnd" id="end-date" placeholder="종료 날짜">



                    <!-- 기간 선택 드롭다운 -->
                    <select name="Dayfilter" id="period-filter">
                        <option value="all" selected >전체</option>
                        <option value="1week">최근 1주일</option>
                        <option value="1month">최근 1개월</option>
                        <option value="3month">최근 3개월</option>
                        <option value="1year">최근 1년</option>
                    </select>
                    <button id="filter-button" type="submit">조회하기</button>
                </form>




            </div>
            </div>
            <div class="horizontal-line"></div>
                <div class="prod_content">
                    <div class="contentDisplay">
                        <div class="prodLine"></div>
                        <div class="order_box1">
                            {{#mypageOneImg}}
                                {{#this}}
                                    <img class="prodImg_" src="http://192.168.250.43/images/a/{{image_link}}" alt="상품 이미지">
                                {{/this}}
                            {{/mypageOneImg}}
                        </div>
                        {{#detailCounts}}
                            <P class="countValue" style="display:none;">{{.}}</P>
                        {{/detailCounts}}
                        {{#pagins}}
                            <div class="dummy_data_order_info">


                                <div class="order_box2">
                                    <p onclick="location.href='/mypage/orderdetail/{{order_id}}'">{{order_date_time}} | 주문 번호 {{order_id}}</p>

                                    <P class="detailValue"></P>
                                    <P class="orderDetailCount"></P>
                                    <p class="totalPrice_">{{total_price}}</p>
                                </div>
                            </div>
                            <div class="prodLine"></div>
                        {{/pagins}}
                        </div>



                    {{#totalElements}}
                        <p style="display:none;">{{totalElements}}</p>
                    {{/totalElements}}

                    {{#totalPage}}
                        <p style="display:none;" class="totalPage">{{totalPage}}</p>
                    {{/totalPage}}
                </div>

        </div>
                <nav aria-label="Page navigation example">
    <!--                onclick="page(this); return false;"-->
                    <ul class="pagination">

                    </ul>
                </nav>
    </div>
</div>
<script src="/static/js/mypage/mypageMain.js"></script>
</body>
{{/loginUser}}
{{>layouts/footer}}