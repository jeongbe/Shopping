<head>
    <link rel="stylesheet" type="text/css" href="/static/css/order/order.css">
</head>

<body>
<header>
    {{>layouts/header}}
</header>
<form method="get" action="/order/Payment/{{user_code}}">
    <div onclick="find(this); return false;">
        <p style="display:none;" class="userCode">{{user_code}}</p>
        <div class="order">
            <div >
                <div class="title">
                    <p>주문하기</p>
                </div>
                <div class="border_ backC">
                    <p>Order</p>
                </div>
                {{#userInfo}}
                <div class="border_ dis">
                    <p>배송지</p>
                    <p class="mar">
<!--                        <input type="radio" name="address" id="" />-->
                        <select name="" id="">
                            <option value="">{{user_addr}} / {{user_detail_addr}} </option>
                            <option value=""></option>
                            <option value=""></option>
                        </select>
                    </p>

                    <div></div>
<!--                    <div class="mar_2">-->
<!--                        <input type="radio" name="address" id="" />직접 입력-->
<!--                        <input type="text" placeholder="주소" />-->
<!--                        <input type="text" placeholder="상세주소" />-->
<!--                    </div>-->
                </div>
                <div class="border_ dis">
                    <p class="v1">이름 / 연락처 :</p>
                    <p class="v1 userName" >{{user_name}}</p>
                    <p>{{user_phone}}</p>
                </div>
        <!--        <div class="border_ dis">-->
        <!--            <p class="v2">주소:</p>-->
        <!--            <p class="">서울시</p>-->
        <!--        </div>-->
                <div class="border_ dis">
                    <p class="v3">배송요청사항</p>
                    <div class="mar_2">
                        <select class="sel" name="" id="">
<!--                            <option value=""></option>-->
                            <option value="">빠른 배송 부탁드립니다.</option>
                            <option value="">배송 전 연락주세요</option>
                            <option value="">
                                부재 시 휴대폰으로 연락주세요
                            </option>
                            <option value="">선택 안함</option>
                        </select>
                        <input class="hides" hidden type="text" />
                    </div>
                </div>
                {{/userInfo}}
            </div>
        </div>

        <div class="prod_info">
            <div>
                <div class="border_ backC">
                    <p>상품 정보</p>
                </div>
                <div class="border_ pord_infos">
                    <p>상품정보</p>
                    <p class="count">수량</p>
                    <p class="pri"></p>
                </div>
                {{#BasketInfo}}
                <div class="border2_">
                    <div>
                        <img
                                class="prod_img"
                                src="/Pro1/image/willow-warbler-8071472_1280.jpg"
                                alt=""
                        />
                    </div>
                    <div class="prod_info2">
                        <p>{{prod_name}}</p>
                        <p style="display:none;">{{prod_code}}</p>
                    </div>
                    <div class="dis prod_info3">
                        <p>{{prod_cnt}}개</p>
                        <p class="price_">{{prod_price}}원</p>
                    </div>
                </div>
                {{/BasketInfo}}
            </div>
        </div>
        <div class="coupon">
            <div>
                <div class="border3_ backC">
                    <p>결제 예정 금액</p>
                </div>
                <div class="border3_">
                    <p>상품 금액:</p>
                    <p class="mar_3 All_price">d</p>
                </div>
                <div class="border3_">
                    <p>배송비:</p>
                    <p class="mar_3">3000원</p>
                </div>
                <div class="border3_">
                    <p>최종 결제 금액:</p>
                    <p class="mar_3 last_All_price">10,000원</p>
                </div>
            </div>
        </div>

        <div class="check_btn">
            <button type="button" class="btn btn-info paymentBtn">결제하기</button>
        </div>
    </div>
</form>
<!--<script src="/Pro1/order.js"></script>-->
<script src="/static/js/Basket/order.js"></script>
</body>
{{>layouts/footer}}